<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_ratings_2"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:weightSum="1"
    android:transformPivotX="@android:dimen/app_icon_size"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true"
    android:orientation="vertical"
    app:layout_collapseParallaxMultiplier="0.2"
    app:layout_collapseMode="parallax"
    android:gravity="bottom|left">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        app:srcCompat="@drawable/wc_background"
        android:id="@+id/imageView2"
        android:scaleType="centerCrop"
        android:cropToPadding="false" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/ratings1"
        android:clickable="true"
        android:gravity="center">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:text="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView16"
                android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:textColor="@android:color/black" />

            <TextView
                android:text="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView17"
                android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:textColor="@android:color/black" />

            <TextView
                android:text="3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView18"
                android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:textColor="@android:color/darker_gray" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:text="WC u Výstaviště"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        tools:text="WC u Výstaviště"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:fontFamily="sans-serif-medium" />

    <TextView
        android:text="Čistota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textAlignment="center"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="5dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:text="Čistý"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_clean1"
                style="@style/Widget.AppCompat.Button.Colored"
                android:background="@android:color/holo_blue_bright" />

            <Button
                android:text="Nevoněl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_clean2"
                style="@style/Widget.AppCompat.Button.Colored"
                android:background="@android:color/holo_orange_light" />

            <Button
                android:text="Špinavý"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_clean3"
                style="@style/Widget.AppCompat.Button.Colored"
                android:background="@android:color/holo_orange_dark" />

            <Button
                android:text="Nechutný"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btn_clean4"
                style="@style/Widget.AppCompat.Button.Colored"
                android:background="?attr/actionModeSplitBackground" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        android:gravity="bottom|center">

    </LinearLayout>

</LinearLayout>
